<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/Dimen_20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCardName"
        android:padding="@dimen/Dimen_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textSize="17dp"
        android:text="Authentication successful"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

          />


    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@+id/tvCardName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/btnCardCancel"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/Dimen_40dp"
        android:background="@drawable/btn_blank_corners"
        android:text="Cancel"
        android:textColor="@color/gray"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:textSize="12dp"
        android:padding="@dimen/Dimen_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
         />

        <Button
            android:id="@+id/btnCardPayment"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/Dimen_40dp"
            android:background="@drawable/btn_corners"
            android:text="Payment"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:textSize="12dp"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btnCardCancel"
            app:layout_constraintRight_toRightOf="parent"
            />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>