<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CouponBagApp" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>

        <item name="colorPrimaryVariant">@color/actionBar</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CouponBagApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.CouponBagApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CouponBagApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>


    <style name="FilterSwitchTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorAccent">#342ea9</item>
        <item name="colorPrimary">@color/white</item>
    </style>


    //Button Yellow

    <style name="Button_yellow_caps" parent="android:Widget.Button">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_yellow</item>
        <!--        <item name="android:fontFamily">@font/roboto_medium</item>-->
        <item name="android:minHeight">@dimen/_40sdp</item>
        <item name="android:textStyle">bold</item>
    </style>


    //Button Pink

    <style name="Button_pink_caps" parent="android:Widget.Button">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_pink</item>
<!--        <item name="android:fontFamily">@font/roboto_medium</item>-->
        <item name="android:minHeight">@dimen/_40sdp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>